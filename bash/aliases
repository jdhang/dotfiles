# editor
alias nv='nvim'
alias a='atom'
alias c='code'

# shortcuts
alias c='clear'
alias ls="ls -GFh"
alias lsa='ls -al'
alias :q='exit'
alias :Q='exit'

# reload config files
alias sbrc='source ~/.bashrc'
alias svrc='source ~/.vim/init.vim'

# config files
alias brc='$EDITOR ~/.bashrc'
alias aliases='$EDITOR ~/.dotfiles/bash/aliases'
alias gitprompt='$EDITOR ~/.dotfiles/bash/.git-prompt.sh'
alias tmco='$EDITOR ~/.tmux.conf'
alias vrc='$EDITOR ~/.dotfiles/vim/.vimrc'
alias vmap='$EDITOR ~/.dotfiles/vim/mappings.vim'
alias vplug='$EDITOR ~/.dotfiles/vim/plugins.vim'
alias vset='$EDITOR ~/.dotfiles/vim/settings.vim'

# projects
alias d='cd ~/.dotfiles'
alias crop='cd ~/Desktop/craftops/craftops-redux'

# tmux
alias tmux='TERM=screen-256color-bce tmux'
alias tls='tmux list-sessions'
alias tns='tmux new -s '
alias tat='tmux attach -t '

# git
alias ga='git add'
__git_complete ga _git_add
alias gaa='git add --all .'
alias gb='git branch'
__git_complete gb _git_branch
alias gba='git branch -a'
alias gbc='gdc'
alias gbd='git branch -d'
alias gbD='git branch -D'
alias gbv='git branch -v'
alias gca='git commit -a'
alias gcaa='git commit -a --amend -C HEAD'
alias gcl='git clone'
alias gcm="git commit -m"
alias gcb='git checkout -b'
alias gco='git checkout'
__git_complete gco _git_checkout
alias gcom='git checkout master'
alias gd='git diff'
alias gdc='git diff --cached'
alias gdm='git diff master'
alias gg='git lg'
alias gl='git log'
alias gm='git merge'
alias gmm='git merge master'
alias gmmff='git merge master --no-ff'
alias gp='git push'
__git_complete gp _git_push
alias gpf='git push -f'
alias gpr='git pull --rebase'
alias gpuo='git push --set-upstream origin'
alias gpush='echo "Use gp!" && git push'
alias grc='git rebase --continue'
alias gs='git status'
alias gsb='git show-branch'

# ember
alias ese='ember server'
alias est='ember start'

# misspells
alias msater='master'

